@page
@model ProductModel
@{
    ViewData["Title"] = "Products";
}

<h1>@ViewData["Title"]</h1>

<div class="container p-4">

    <div class="row">

        <div class="col-md-4">
            <div class="card" style="width: 18rem;">
                <img src="~/assets/waffle.jpg" class="card-img-top" alt="Product Image" asp-append-version="true">
                <div class="card-body">
                    <h5 class="card-title">Product</h5>
                    <h4 class="display-6 fw-bold">$15</h4>
                    <ul class="list-unstyled">
                        <li class="d-flex mb-2">
                            <span class="bs-icon-xs bs-icon-rounded bs-icon-primary-light bs-icon me-2">
                                <svg class="bi bi-check-lg" xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16">
                                    <path d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425a.247.247 0 0 1 .02-.022Z"></path>
                                </svg>
                            </span><span>Porta suscipit netus ad ac.</span>
                        </li>
                    </ul>
                    <form asp-controller="Cart" asp-action="AddToCart" method="post">
                        <input type="hidden" name="productId" value="123" /> 
                        <button type="submit" class="btn btn-dark d-block w-100">Add To Cart!</button>
                    </form>
                </div>
            </div>
        </div>



        <div class="col-md-4">
            <div class="card" style="width: 18rem;">
                <img src="~/assets/waffle.jpg" class="card-img-top" alt="Product Image" asp-append-version="true">
                <div class="card-body">
                    <h5 class="card-title">Product</h5>
                    <p class="card-text">details</p>
                    <a asp-controller="Cart" asp-action="/Cart" class="btn btn-dark d-block w-100">Add To Cart!</a>
                </div>
            </div>
        </div>




    </div>
</div>